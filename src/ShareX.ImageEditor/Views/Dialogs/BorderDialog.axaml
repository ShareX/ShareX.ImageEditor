<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="350"
             x:Class="ShareX.ImageEditor.Views.Dialogs.BorderDialog"
             x:Name="BorderDialogRoot">

    <StackPanel Spacing="0">
        <TextBlock Text="Border" Foreground="#9CA3AF" Margin="0,0,0,8"/>
        
        <StackPanel Spacing="12">
            <!-- Border Type -->
            <StackPanel Spacing="4">
                <TextBlock Text="Type" Foreground="#9CA3AF"/>
                <ComboBox x:Name="TypeComboBox" SelectedIndex="0" SelectionChanged="OnSelectionChanged"
                          HorizontalAlignment="Stretch" Background="#374151" BorderThickness="0" CornerRadius="4">
                    <ComboBoxItem Content="Outside"/>
                    <ComboBoxItem Content="Inside"/>
                </ComboBox>
            </StackPanel>

            <!-- Size -->
            <StackPanel Spacing="0">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0" Text="Size" Foreground="#9CA3AF"/>
                    <Border Grid.Column="1" Classes="capsule">
                        <TextBlock Text="{Binding ElementName=SizeSlider, Path=Value, StringFormat='{}{0:0}'}"
                                   Foreground="#E7E9EA"/>
                    </Border>
                </Grid>
                <Slider x:Name="SizeSlider" Minimum="1" Maximum="100" Value="5" ValueChanged="OnValueChanged"
                        Background="#374151"/>
            </StackPanel>

            <!-- Dash Style -->
            <StackPanel Spacing="4">
                <TextBlock Text="Dash Style" Foreground="#9CA3AF"/>
                <ComboBox x:Name="DashStyleComboBox" SelectedIndex="0" SelectionChanged="OnSelectionChanged"
                          HorizontalAlignment="Stretch" Background="#374151" BorderThickness="0" CornerRadius="4">
                    <ComboBoxItem Content="Solid"/>
                    <ComboBoxItem Content="Dash"/>
                    <ComboBoxItem Content="Dot"/>
                    <ComboBoxItem Content="Dash Dot"/>
                </ComboBox>
            </StackPanel>

            <!-- Color -->
            <StackPanel Spacing="4">
                <TextBlock Text="Color" Foreground="#9CA3AF"/>
                <Grid ColumnDefinitions="*,Auto">
                    <TextBox x:Name="ColorTextBox" Text="#000000" TextChanged="OnColorTextChanged"
                             HorizontalAlignment="Stretch" Foreground="#E7E9EA" Background="#374151" BorderThickness="0" CornerRadius="4" Padding="8"/>
                    <Border x:Name="ColorPreview" Grid.Column="1" Width="30" Height="30" CornerRadius="4" Background="#000000" Margin="8,0,0,0" BorderBrush="#1F1F1F" BorderThickness="1"/>
                </Grid>
            </StackPanel>
        </StackPanel>

        <!-- Buttons -->
        <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button Classes="editor-button" Content="Cancel" Click="OnCancelClick" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
            <Button Classes="editor-button active" Content="Apply" Click="OnApplyClick" Margin="4,0,0,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>
