<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
             x:Class="ShareX.ImageEditor.Views.Dialogs.Rotate3DDialog"
             x:Name="Rotate3DDialogRoot">

    <StackPanel Spacing="0">
        <!-- Header -->
        <TextBlock Text="Rotate 3D" Foreground="#9CA3AF" Margin="0,0,0,8"/>
        
        <!-- X-axis Slider -->
        <StackPanel Spacing="0">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Grid.Column="0" Text="X-axis (Tilt)" Foreground="#9CA3AF"/>
                <Border Grid.Column="1" Classes="capsule">
                    <TextBlock Text="{Binding ElementName=XAxisSlider, Path=Value, StringFormat='{}{0:0}°'}"
                               Foreground="#E7E9EA"/>
                </Border>
            </Grid>
            <Slider x:Name="XAxisSlider"
                    Minimum="-180" Maximum="180" Value="0"
                    TickFrequency="1" IsSnapToTickEnabled="True"
                    Background="#374151"
                    ValueChanged="OnValueChanged"/>
        </StackPanel>
        
        <!-- Y-axis Slider -->
        <StackPanel Spacing="0" Margin="0,8,0,0">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Grid.Column="0" Text="Y-axis (Turn)" Foreground="#9CA3AF"/>
                <Border Grid.Column="1" Classes="capsule">
                    <TextBlock Text="{Binding ElementName=YAxisSlider, Path=Value, StringFormat='{}{0:0}°'}"
                               Foreground="#E7E9EA"/>
                </Border>
            </Grid>
            <Slider x:Name="YAxisSlider"
                    Minimum="-180" Maximum="180" Value="0"
                    TickFrequency="1" IsSnapToTickEnabled="True"
                    Background="#374151"
                    ValueChanged="OnValueChanged"/>
        </StackPanel>
        
        <!-- Z-axis Slider -->
        <StackPanel Spacing="0" Margin="0,8,0,0">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Grid.Column="0" Text="Z-axis (Rotate)" Foreground="#9CA3AF"/>
                <Border Grid.Column="1" Classes="capsule">
                    <TextBlock Text="{Binding ElementName=ZAxisSlider, Path=Value, StringFormat='{}{0:0}°'}"
                               Foreground="#E7E9EA"/>
                </Border>
            </Grid>
            <Slider x:Name="ZAxisSlider"
                    Minimum="-180" Maximum="180" Value="0"
                    TickFrequency="1" IsSnapToTickEnabled="True"
                    Background="#374151"
                    ValueChanged="OnValueChanged"/>
        </StackPanel>

        <!-- Buttons -->
        <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button Classes="editor-button" Content="Cancel" Click="OnCancelClick" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
            <Button Classes="editor-button active" Content="Apply" Click="OnApplyClick" Margin="4,0,0,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>
