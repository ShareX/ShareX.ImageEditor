<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="40"
             x:Class="ShareX.ImageEditor.Controls.WidthPickerDropdown"
             x:Name="WidthPickerDropdownRoot">

    <UserControl.Styles>
        <Style Selector="Button.picker-button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style Selector="Button.picker-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#374151"/>
        </Style>
        <Style Selector="Button.picker-button.active">
            <Setter Property="Background" Value="#3E83F2"/>
        </Style>
        <Style Selector="Button.picker-button.active /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#3E83F2"/>
        </Style>
    </UserControl.Styles>

    <Grid>
        <!-- Dropdown Button -->
        <Button x:Name="DropdownButton"
                Classes="editor-button"
                Click="OnDropdownButtonClick"
                Height="40"
                MinWidth="60"
                HorizontalContentAlignment="Stretch">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <!-- Width Preview Circle -->
                <Grid Grid.Column="0"
                      Width="24"
                      Height="24"
                      VerticalAlignment="Center"
                      Margin="0,0,6,0">
                    <Ellipse Width="{Binding SelectedWidth, ElementName=WidthPickerDropdownRoot}"
                             Height="{Binding SelectedWidth, ElementName=WidthPickerDropdownRoot}"
                             Fill="#94A3B8"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                </Grid>

                <!-- Spacer -->
                <Border Grid.Column="1"/>

                <!-- Chevron Icon (FontAwesome ChevronDown) -->
                <TextBlock Grid.Column="2"
                           Text="&#xf078;"
                           FontFamily="avares://ShareX.ImageEditor/Assets#Font Awesome 7 Free"
                           FontWeight="Black"
                           FontSize="10"
                           Foreground="#94A3B8"
                           VerticalAlignment="Center"/>
            </Grid>
        </Button>

        <!-- Popup -->
        <Popup x:Name="WidthPopup"
               PlacementTarget="{Binding #DropdownButton}"
               Placement="Bottom"
               IsLightDismissEnabled="True"
               VerticalOffset="4">
            <Border Classes="popup-border">
                <ItemsControl ItemsSource="{Binding WidthOptions, ElementName=WidthPickerDropdownRoot}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="5"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Width="32"
                                    Height="32"
                                    Padding="0"
                                    Classes="picker-button"
                                    Click="OnWidthSelected"
                                    CommandParameter="{Binding .}"
                                    ToolTip.Tip="{Binding ., StringFormat='{}{0} px'}">
                                <Grid Width="24" Height="24">
                                    <Ellipse Width="{Binding .}"
                                             Height="{Binding .}"
                                             Fill="#94A3B8"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </Popup>
    </Grid>
</UserControl>
