<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:ShareX.ImageEditor.Controls"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             x:Class="ShareX.ImageEditor.Views.Dialogs.SliceDialog"
             x:Name="SliceDialogRoot">

    <StackPanel Spacing="0">
        <TextBlock Text="Slice" Foreground="#9CA3AF" Margin="0,0,0,8"/>
        
        <StackPanel Spacing="12">
            <!-- Min Height -->
            <controls:EffectSlider Label="Min Height" ValueStringFormat="{}{0:0}" x:Name="MinHeightSlider" Minimum="1" Maximum="100" Value="10" ValueChanged="OnValueChanged"
                        Background="#374151"/>

            <!-- Max Height -->
            <controls:EffectSlider Label="Max Height" ValueStringFormat="{}{0:0}" x:Name="MaxHeightSlider" Minimum="1" Maximum="200" Value="100" ValueChanged="OnValueChanged"
                        Background="#374151"/>

            <!-- Min Shift -->
            <controls:EffectSlider Label="Min Shift" ValueStringFormat="{}{0:0}" x:Name="MinShiftSlider" Minimum="0" Maximum="100" Value="0" ValueChanged="OnValueChanged"
                        Background="#374151"/>

            <!-- Max Shift -->
            <controls:EffectSlider Label="Max Shift" ValueStringFormat="{}{0:0}" x:Name="MaxShiftSlider" Minimum="0" Maximum="100" Value="10" ValueChanged="OnValueChanged"
                        Background="#374151"/>
        </StackPanel>

        <!-- Buttons -->
        <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button Classes="editor-button" Content="Cancel" Click="OnCancelClick" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
            <Button Classes="editor-button active" Content="Apply" Click="OnApplyClick" Margin="4,0,0,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>

