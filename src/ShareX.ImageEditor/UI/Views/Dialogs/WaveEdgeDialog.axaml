<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:ShareX.ImageEditor.Controls"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="340"
             x:Class="ShareX.ImageEditor.Views.Dialogs.WaveEdgeDialog"
             x:Name="WaveEdgeDialogRoot">

    <StackPanel Spacing="0">
        <TextBlock Text="Wave Edge" Foreground="#9CA3AF" Margin="0,0,0,8"/>

        <StackPanel Spacing="12">
            <!-- Depth -->
            <controls:EffectSlider Label="Depth" ValueStringFormat="{}{0:0}" x:Name="DepthSlider"
                        Minimum="1"
                        Maximum="100"
                        Value="15"
                        ValueChanged="OnValueChanged"
                        Background="#374151"/>

            <!-- Range -->
            <controls:EffectSlider Label="Range" ValueStringFormat="{}{0:0}" x:Name="RangeSlider"
                        Minimum="1"
                        Maximum="100"
                        Value="20"
                        ValueChanged="OnValueChanged"
                        Background="#374151"/>

            <!-- Sides -->
            <StackPanel Spacing="8">
                <TextBlock Text="Sides" Foreground="#9CA3AF"/>
                <StackPanel Orientation="Vertical">
                    <CheckBox x:Name="TopCheckBox" Content="Top" IsChecked="True" Foreground="#E7E9EA"
                              Checked="OnCheckChanged" Unchecked="OnCheckChanged"/>
                    <CheckBox x:Name="RightCheckBox" Content="Right" IsChecked="True" Foreground="#E7E9EA"
                              Checked="OnCheckChanged" Unchecked="OnCheckChanged"/>
                    <CheckBox x:Name="BottomCheckBox" Content="Bottom" IsChecked="True" Foreground="#E7E9EA"
                              Checked="OnCheckChanged" Unchecked="OnCheckChanged"/>
                    <CheckBox x:Name="LeftCheckBox" Content="Left" IsChecked="True" Foreground="#E7E9EA"
                              Checked="OnCheckChanged" Unchecked="OnCheckChanged"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Buttons -->
        <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button Classes="editor-button" Content="Cancel" Click="OnCancelClick" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
            <Button Classes="editor-button active" Content="Apply" Click="OnApplyClick" Margin="4,0,0,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>

