<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:ShareX.ImageEditor.Controls"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="320"
             x:Class="ShareX.ImageEditor.Views.Dialogs.RainyWindowDialog"
             x:Name="RainyWindowDialogRoot">

    <StackPanel Spacing="0">
        <TextBlock Text="Rainy Window" Foreground="#9CA3AF" Margin="0,0,0,8"/>

        <StackPanel Spacing="8">
            <controls:EffectSlider Label="Glass distortion" ValueStringFormat="{}{0:0}" x:Name="DistortionSlider"
                                   Minimum="0"
                                   Maximum="30"
                                   Value="8"
                                   TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   ValueChanged="OnValueChanged"/>

            <controls:EffectSlider Label="Streak density (%)" ValueStringFormat="{}{0:0}" x:Name="StreakSlider"
                                   Minimum="0"
                                   Maximum="100"
                                   Value="45"
                                   TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   ValueChanged="OnValueChanged"/>

            <controls:EffectSlider Label="Mist (%)" ValueStringFormat="{}{0:0}" x:Name="MistSlider"
                                   Minimum="0"
                                   Maximum="100"
                                   Value="25"
                                   TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   ValueChanged="OnValueChanged"/>

            <controls:EffectSlider Label="Droplets (%)" ValueStringFormat="{}{0:0}" x:Name="DropletSlider"
                                   Minimum="0"
                                   Maximum="100"
                                   Value="35"
                                   TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   ValueChanged="OnValueChanged"/>
        </StackPanel>

        <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button Classes="editor-button" Content="Cancel" Click="OnCancelClick" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
            <Button Classes="editor-button active" Content="Apply" Click="OnApplyClick" Margin="4,0,0,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>
