<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:ShareX.ImageEditor.Controls"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
             x:Class="ShareX.ImageEditor.Views.Dialogs.PixelateDialog"
             x:Name="PixelateDialogRoot">

    <StackPanel Spacing="0">
        <!-- Header -->
        <TextBlock Text="Pixelate" Foreground="#9CA3AF" Margin="0,0,0,8"/>
        
        <!-- Slider -->
        <controls:EffectSlider Label="Size" ValueStringFormat="{}{0:0} px" x:Name="SizeSlider"
                    Minimum="2" Maximum="200" Value="10"
                    TickFrequency="1" IsSnapToTickEnabled="True"
                    Background="#374151"
                    ValueChanged="OnValueChanged"/>

        <!-- Buttons -->
        <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button Classes="editor-button" Content="Cancel" Click="OnCancelClick" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
            <Button Classes="editor-button active" Content="Apply" Click="OnApplyClick" Margin="4,0,0,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>

