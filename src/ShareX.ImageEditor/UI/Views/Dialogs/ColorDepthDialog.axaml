<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:ShareX.ImageEditor.Controls"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
             x:Class="ShareX.ImageEditor.Views.Dialogs.ColorDepthDialog"
             x:Name="ColorDepthDialogRoot">

    <StackPanel Spacing="0">
        <TextBlock Text="Color Depth" Foreground="#9CA3AF" Margin="0,0,0,8"/>

        <controls:EffectSlider Label="Bits per channel" ValueStringFormat="{}{0:0}" x:Name="BitsSlider"
                    Minimum="1"
                    Maximum="8"
                    Value="4"
                    TickFrequency="1"
                    IsSnapToTickEnabled="True"
                    Background="#374151"
                    ValueChanged="OnValueChanged"/>

        <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button Classes="editor-button" Content="Cancel" Click="OnCancelClick" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
            <Button Classes="editor-button active" Content="Apply" Click="OnApplyClick" Margin="4,0,0,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>

