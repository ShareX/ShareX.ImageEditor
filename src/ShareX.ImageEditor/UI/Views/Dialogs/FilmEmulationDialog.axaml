<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:ShareX.ImageEditor.Controls"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="360"
             x:Class="ShareX.ImageEditor.Views.Dialogs.FilmEmulationDialog"
             x:Name="FilmEmulationDialogRoot">

    <StackPanel Spacing="0">
        <TextBlock Text="Film Emulation" Foreground="#9CA3AF" Margin="0,0,0,8"/>

        <StackPanel Spacing="10">
            <StackPanel Spacing="4">
                <TextBlock Text="Preset" Foreground="#9CA3AF"/>
                <ComboBox x:Name="PresetComboBox"
                          SelectedIndex="0"
                          SelectionChanged="OnPresetChanged"
                          HorizontalAlignment="Stretch"
                          Background="#374151"
                          BorderThickness="0"
                          CornerRadius="4">
                    <ComboBoxItem Content="Classic"/>
                    <ComboBoxItem Content="Warm"/>
                    <ComboBoxItem Content="Cool"/>
                    <ComboBoxItem Content="Faded"/>
                    <ComboBoxItem Content="Cross Processed"/>
                </ComboBox>
            </StackPanel>

            <controls:EffectSlider Label="Tone strength (%)" ValueStringFormat="{}{0:0}" x:Name="ToneSlider"
                                   Minimum="0"
                                   Maximum="100"
                                   Value="65"
                                   TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   ValueChanged="OnValueChanged"/>

            <controls:EffectSlider Label="Contrast (%)" ValueStringFormat="{}{0:0}" x:Name="ContrastSlider"
                                   Minimum="50"
                                   Maximum="150"
                                   Value="110"
                                   TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   ValueChanged="OnValueChanged"/>

            <controls:EffectSlider Label="Fade (%)" ValueStringFormat="{}{0:0}" x:Name="FadeSlider"
                                   Minimum="0"
                                   Maximum="100"
                                   Value="10"
                                   TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   ValueChanged="OnValueChanged"/>

            <controls:EffectSlider Label="Grain (%)" ValueStringFormat="{}{0:0}" x:Name="GrainSlider"
                                   Minimum="0"
                                   Maximum="100"
                                   Value="12"
                                   TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   ValueChanged="OnValueChanged"/>
        </StackPanel>

        <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button Classes="editor-button" Content="Cancel" Click="OnCancelClick" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
            <Button Classes="editor-button active" Content="Apply" Click="OnApplyClick" Margin="4,0,0,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>
