<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="240"
             x:Class="ShareX.ImageEditor.Views.Dialogs.ShadowsHighlightsDialog"
             x:Name="ShadowsHighlightsDialogRoot">

    <StackPanel Spacing="0">
        <TextBlock Text="Shadows / Highlights" Foreground="#9CA3AF" Margin="0,0,0,8"/>

        <StackPanel Spacing="8">
            <StackPanel Spacing="0">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0" Text="Shadows" Foreground="#9CA3AF"/>
                    <Border Grid.Column="1" Classes="capsule">
                        <TextBlock Text="{Binding ElementName=ShadowsSlider, Path=Value, StringFormat='{}{0:0}'}"
                                   Foreground="#E7E9EA"/>
                    </Border>
                </Grid>
                <Slider x:Name="ShadowsSlider"
                        Minimum="-100" Maximum="100" Value="0"
                        TickFrequency="1" IsSnapToTickEnabled="True"
                        Background="#374151"
                        ValueChanged="OnValueChanged"/>
            </StackPanel>

            <StackPanel Spacing="0">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0" Text="Highlights" Foreground="#9CA3AF"/>
                    <Border Grid.Column="1" Classes="capsule">
                        <TextBlock Text="{Binding ElementName=HighlightsSlider, Path=Value, StringFormat='{}{0:0}'}"
                                   Foreground="#E7E9EA"/>
                    </Border>
                </Grid>
                <Slider x:Name="HighlightsSlider"
                        Minimum="-100" Maximum="100" Value="0"
                        TickFrequency="1" IsSnapToTickEnabled="True"
                        Background="#374151"
                        ValueChanged="OnValueChanged"/>
            </StackPanel>
        </StackPanel>

        <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button Classes="editor-button" Content="Cancel" Click="OnCancelClick" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
            <Button Classes="editor-button active" Content="Apply" Click="OnApplyClick" Margin="4,0,0,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>
