<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="260"
             x:Class="ShareX.ImageEditor.Views.Dialogs.ScaleDialog"
             x:Name="ScaleDialogRoot">

    <StackPanel Spacing="0">
        <TextBlock Text="Scale" Foreground="#9CA3AF" Margin="0,0,0,8"/>

        <StackPanel Spacing="12">
            <StackPanel Spacing="4">
                <TextBlock Text="Width percentage" Foreground="#9CA3AF"/>
                <NumericUpDown x:Name="WidthPercentageInput"
                               Value="100"
                               Minimum="0"
                               Maximum="10000"
                               Increment="1"
                               FormatString="0.##"
                               ShowButtonSpinner="False"
                               ValueChanged="OnValueChanged"/>
            </StackPanel>

            <StackPanel Spacing="4">
                <TextBlock Text="Height percentage" Foreground="#9CA3AF"/>
                <NumericUpDown x:Name="HeightPercentageInput"
                               Value="0"
                               Minimum="0"
                               Maximum="10000"
                               Increment="1"
                               FormatString="0.##"
                               ShowButtonSpinner="False"
                               ValueChanged="OnValueChanged"/>
            </StackPanel>

            <TextBlock Text="Set width or height to 0 to preserve aspect ratio from the other value."
                       Foreground="#9CA3AF"
                       FontSize="12"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button Classes="editor-button" Content="Cancel" Click="OnCancelClick" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
            <Button Classes="editor-button active" Content="Apply" Click="OnApplyClick" Margin="4,0,0,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>
