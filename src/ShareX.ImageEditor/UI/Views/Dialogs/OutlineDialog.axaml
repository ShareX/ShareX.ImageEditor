<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:cp="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.ColorPicker"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             x:Class="ShareX.ImageEditor.Views.Dialogs.OutlineDialog"
             x:Name="OutlineDialogRoot">

    <UserControl.Styles>
        <StyleInclude Source="avares://Avalonia.Controls.ColorPicker/Themes/Fluent/Fluent.xaml" />
    </UserControl.Styles>

    <StackPanel Spacing="0">
        <TextBlock Text="Outline" Foreground="#9CA3AF" Margin="0,0,0,8"/>
        
        <StackPanel Spacing="12">
            <!-- Size -->
            <StackPanel Spacing="0">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0" Text="Size" Foreground="#9CA3AF"/>
                    <Border Grid.Column="1" Classes="capsule">
                        <TextBlock Text="{Binding ElementName=SizeSlider, Path=Value, StringFormat='{}{0:0}'}"
                                   Foreground="#E7E9EA"/>
                    </Border>
                </Grid>
                <Slider x:Name="SizeSlider" Minimum="1" Maximum="50" Value="3" ValueChanged="OnValueChanged"
                        Background="#374151"/>
            </StackPanel>

            <!-- Padding -->
            <StackPanel Spacing="0">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0" Text="Padding" Foreground="#9CA3AF"/>
                    <Border Grid.Column="1" Classes="capsule">
                        <TextBlock Text="{Binding ElementName=PaddingSlider, Path=Value, StringFormat='{}{0:0}'}"
                                   Foreground="#E7E9EA"/>
                    </Border>
                </Grid>
                <Slider x:Name="PaddingSlider" Minimum="0" Maximum="100" Value="0" ValueChanged="OnValueChanged"
                        Background="#374151"/>
            </StackPanel>

            <!-- Color -->
            <StackPanel Spacing="4">
                <TextBlock Text="Color" Foreground="#9CA3AF"/>
                <Grid>
                    <Button x:Name="ColorButton"
                            Classes="editor-button"
                            Click="OnColorButtonClick"
                            Height="36"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch">
                        <Grid ColumnDefinitions="Auto,8,*">
                            <!-- Color Preview with checkered background -->
                            <Grid Grid.Column="0" Width="24" Height="24" VerticalAlignment="Center">
                                <Border CornerRadius="4" ClipToBounds="True">
                                    <Border.Background>
                                        <DrawingBrush TileMode="Tile"
                                                      DestinationRect="0,0,8,8"
                                                      SourceRect="0,0,8,8">
                                            <DrawingBrush.Drawing>
                                                <DrawingGroup>
                                                    <GeometryDrawing Brush="#CCCCCC">
                                                        <GeometryDrawing.Geometry>
                                                            <RectangleGeometry Rect="0,0,8,8"/>
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>
                                                    <GeometryDrawing Brush="#999999">
                                                        <GeometryDrawing.Geometry>
                                                            <GeometryGroup>
                                                                <RectangleGeometry Rect="0,0,4,4"/>
                                                                <RectangleGeometry Rect="4,4,4,4"/>
                                                            </GeometryGroup>
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>
                                                </DrawingGroup>
                                            </DrawingBrush.Drawing>
                                        </DrawingBrush>
                                    </Border.Background>
                                </Border>
                                <Border Background="{Binding OutlineColorBrush, ElementName=OutlineDialogRoot}"
                                        CornerRadius="4"/>
                            </Grid>
                            <!-- Color label -->
                            <TextBlock Grid.Column="2"
                                       Text="{Binding OutlineColorText, ElementName=OutlineDialogRoot}"
                                       Foreground="#9CA3AF"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Button>

                    <Popup x:Name="ColorPopup"
                           PlacementTarget="{Binding #ColorButton}"
                           Placement="Bottom"
                           IsLightDismissEnabled="True"
                           VerticalOffset="4">
                        <Border Background="#1F2937"
                                CornerRadius="8"
                                Padding="4"
                                BorderBrush="#374151"
                                BorderThickness="1">
                            <cp:ColorView x:Name="ColorViewControl"
                                          Color="{Binding OutlineColorValue, ElementName=OutlineDialogRoot, Mode=TwoWay}"
                                          IsAlphaVisible="True"
                                          IsColorPreviewVisible="True"/>
                        </Border>
                    </Popup>
                </Grid>
            </StackPanel>

            <!-- Outline Only -->
            <CheckBox x:Name="OutlineOnlyCheckBox"
                      Content="Outline only"
                      Foreground="#9CA3AF"
                      IsCheckedChanged="OnOutlineOnlyChanged"/>
        </StackPanel>

        <!-- Buttons -->
        <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button Classes="editor-button" Content="Cancel" Click="OnCancelClick" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
            <Button Classes="editor-button active" Content="Apply" Click="OnApplyClick" Margin="4,0,0,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>
