<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:ShareX.ImageEditor.Controls"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="320"
             x:Class="ShareX.ImageEditor.Views.Dialogs.CrystalPrismDialog"
             x:Name="CrystalPrismDialogRoot">

    <StackPanel Spacing="0">
        <TextBlock Text="Crystal Prism" Foreground="#9CA3AF" Margin="0,0,0,8"/>

        <StackPanel Spacing="8">
            <controls:EffectSlider Label="Facet size (px)" ValueStringFormat="{}{0:0}" x:Name="FacetSlider"
                                   Minimum="6"
                                   Maximum="96"
                                   Value="24"
                                   TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   ValueChanged="OnValueChanged"/>

            <controls:EffectSlider Label="Refraction" ValueStringFormat="{}{0:0}" x:Name="RefractionSlider"
                                   Minimum="0"
                                   Maximum="30"
                                   Value="8"
                                   TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   ValueChanged="OnValueChanged"/>

            <controls:EffectSlider Label="Dispersion" ValueStringFormat="{}{0:0}" x:Name="DispersionSlider"
                                   Minimum="0"
                                   Maximum="20"
                                   Value="4"
                                   TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   ValueChanged="OnValueChanged"/>

            <controls:EffectSlider Label="Sparkle (%)" ValueStringFormat="{}{0:0}" x:Name="SparkleSlider"
                                   Minimum="0"
                                   Maximum="100"
                                   Value="25"
                                   TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   ValueChanged="OnValueChanged"/>
        </StackPanel>

        <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button Classes="editor-button" Content="Cancel" Click="OnCancelClick" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
            <Button Classes="editor-button active" Content="Apply" Click="OnApplyClick" Margin="4,0,0,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>
