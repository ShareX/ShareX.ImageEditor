<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:ShareX.ImageEditor.Controls"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
             x:Class="ShareX.ImageEditor.Views.Dialogs.Rotate3DBoxDialog"
             x:Name="Rotate3DBoxDialogRoot">

    <StackPanel Spacing="0">
        <!-- Header -->
        <TextBlock Text="3D Box / Extrude" Foreground="#9CA3AF" Margin="0,0,0,8"/>

        <!-- Depth Slider -->
        <controls:EffectSlider Label="Depth" ValueStringFormat="{}{0:0} px" x:Name="DepthSlider"
                               Minimum="0" Maximum="300" Value="50"
                               TickFrequency="1" IsSnapToTickEnabled="True"
                               Background="#374151"
                               ValueChanged="OnValueChanged"/>

        <!-- X-axis Slider -->
        <controls:EffectSlider Label="X-axis (Tilt)" ValueStringFormat="{}{0:0}&#176;" x:Name="XAxisSlider"
                               Minimum="-90" Maximum="90" Value="15"
                               TickFrequency="1" IsSnapToTickEnabled="True"
                               Background="#374151"
                               Margin="0,8,0,0"
                               ValueChanged="OnValueChanged"/>

        <!-- Y-axis Slider -->
        <controls:EffectSlider Label="Y-axis (Turn)" ValueStringFormat="{}{0:0}&#176;" x:Name="YAxisSlider"
                               Minimum="-90" Maximum="90" Value="25"
                               TickFrequency="1" IsSnapToTickEnabled="True"
                               Background="#374151"
                               Margin="0,8,0,0"
                               ValueChanged="OnValueChanged"/>

        <!-- Z-axis Slider -->
        <controls:EffectSlider Label="Z-axis (Rotate)" ValueStringFormat="{}{0:0}&#176;" x:Name="ZAxisSlider"
                               Minimum="-90" Maximum="90" Value="0"
                               TickFrequency="1" IsSnapToTickEnabled="True"
                               Background="#374151"
                               Margin="0,8,0,0"
                               ValueChanged="OnValueChanged"/>

        <!-- CheckBoxes -->
        <StackPanel Spacing="8" Margin="0,12,0,0">
            <CheckBox x:Name="AutoResizeCheckBox" Content="Auto resize" IsChecked="True" Foreground="#E7E9EA" Checked="OnAutoResizeChanged" Unchecked="OnAutoResizeChanged"/>
        </StackPanel>

        <!-- Buttons -->
        <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button Classes="editor-button" Content="Cancel" Click="OnCancelClick" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
            <Button Classes="editor-button active" Content="Apply" Click="OnApplyClick" Margin="4,0,0,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>
