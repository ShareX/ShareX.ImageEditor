<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:ShareX.ImageEditor.Controls"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             x:Class="ShareX.ImageEditor.Views.Dialogs.SkewDialog"
             x:Name="SkewDialogRoot">

    <StackPanel Spacing="0">
        <!-- Header -->
        <TextBlock Text="Skew" Foreground="#9CA3AF" Margin="0,0,0,8"/>

        <!-- Horizontal Slider -->
        <controls:EffectSlider Label="Horizontal" ValueStringFormat="{}{0:0} px" x:Name="HorizontalSlider"
                               Minimum="-100" Maximum="100" Value="0"
                               TickFrequency="1" IsSnapToTickEnabled="True"
                               Background="#374151"
                               ValueChanged="OnValueChanged"/>

        <!-- Vertical Slider -->
        <controls:EffectSlider Label="Vertical" ValueStringFormat="{}{0:0} px" x:Name="VerticalSlider"
                               Minimum="-100" Maximum="100" Value="0"
                               TickFrequency="1" IsSnapToTickEnabled="True"
                               Background="#374151"
                               Margin="0,8,0,0"
                               ValueChanged="OnValueChanged"/>

        <!-- Auto Resize Checkbox -->
        <CheckBox x:Name="AutoResizeCheckBox"
                  IsChecked="True"
                  Content="Auto resize"
                  Foreground="#9CA3AF"
                  Margin="0,8,0,0"
                  Checked="OnAutoResizeChanged"
                  Unchecked="OnAutoResizeChanged"/>

        <!-- Buttons -->
        <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button Classes="editor-button" Content="Cancel" Click="OnCancelClick" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
            <Button Classes="editor-button active" Content="Apply" Click="OnApplyClick" Margin="4,0,0,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>
