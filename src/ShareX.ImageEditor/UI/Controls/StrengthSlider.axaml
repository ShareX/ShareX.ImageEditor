<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="40"
             x:Class="ShareX.ImageEditor.Controls.StrengthSlider"
             x:Name="StrengthSliderRoot">

    <Grid ColumnDefinitions="Auto,*" Height="40" VerticalAlignment="Center">
        <!-- Strength Label -->
        <TextBlock Grid.Column="0"
                   Text="{Binding Value, ElementName=StrengthSliderControl, StringFormat='{}{0:F0}'}"
                   Foreground="{DynamicResource ShareX.Brush.Text.Secondary}"
                   FontSize="12"
                   VerticalAlignment="Center"
                   Width="24"
                   TextAlignment="Center"
                   Margin="0,0,4,0"/>
        
        <!-- Slider -->
        <Slider x:Name="StrengthSliderControl"
                Grid.Column="1"
                Minimum="{Binding Minimum, ElementName=StrengthSliderRoot}"
                Maximum="{Binding Maximum, ElementName=StrengthSliderRoot}"
                Value="{Binding SelectedStrength, ElementName=StrengthSliderRoot, Mode=TwoWay}"
                Height="50"
                Width="100"
                Margin="0,0,4,0"
                VerticalAlignment="Center"/>
    </Grid>
</UserControl>
