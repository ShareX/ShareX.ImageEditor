<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="40"
             x:Class="ShareX.Editor.Controls.WidthPickerDropdown"
             x:Name="WidthPickerDropdownRoot">

    <UserControl.Styles>
        <Style Selector="Button.dropdown-button">
            <Setter Property="Background" Value="#2D2D3F"/>
            <Setter Property="BorderBrush" Value="#3B3B52"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="Padding" Value="6,6"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style Selector="Button.dropdown-button:pointerover">
            <Setter Property="Background" Value="#3B3B52"/>
        </Style>
        
        <Style Selector="Border.popup-border">
            <Setter Property="Background" Value="#2D2D3F"/>
            <Setter Property="BorderBrush" Value="#3B3B52"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BoxShadow" Value="0 4 16 #40000000"/>
        </Style>
        
        <Style Selector="Button.width-option">
            <Setter Property="Background" Value="#2D2D3F"/>
            <Setter Property="BorderBrush" Value="#3B3B52"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
        
        <Style Selector="Button.width-option:pointerover">
            <Setter Property="Background" Value="#3B3B52"/>
        </Style>
    </UserControl.Styles>

    <Grid>
        <!-- Dropdown Button -->
        <Button x:Name="DropdownButton"
                Classes="dropdown-button"
                Click="OnDropdownButtonClick"
                HorizontalContentAlignment="Stretch">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <!-- Width Preview Circle -->
                <Grid Grid.Column="0" 
                      Width="24" 
                      Height="24" 
                      VerticalAlignment="Center"
                      Margin="0,0,6,0">
                    <Ellipse Width="{Binding SelectedWidth, ElementName=WidthPickerDropdownRoot}" 
                             Height="{Binding SelectedWidth, ElementName=WidthPickerDropdownRoot}"
                             Fill="#94A3B8"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                </Grid>
                
                <!-- Spacer -->
                <Border Grid.Column="1"/>
                
                <!-- Chevron Icon (FontAwesome ChevronDown) -->
                <TextBlock Grid.Column="2" 
                           Text="&#xf078;" 
                           FontFamily="avares://ShareX.Editor/Assets#Font Awesome 7 Free"
                           FontWeight="Black"
                           FontSize="10"
                           Foreground="#94A3B8"
                           VerticalAlignment="Center"/>
            </Grid>
        </Button>

        <!-- Popup -->
        <Popup x:Name="WidthPopup"
               PlacementTarget="{Binding #DropdownButton}"
               Placement="Bottom"
               IsLightDismissEnabled="True"
               VerticalOffset="4">
            <Border Classes="popup-border">
                <ItemsControl ItemsSource="{Binding WidthOptions, ElementName=WidthPickerDropdownRoot}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" MaxWidth="230"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Classes="width-option"
                                    Click="OnWidthSelected"
                                    CommandParameter="{Binding .}"
                                    ToolTip.Tip="{Binding ., StringFormat='{}{0}px'}">
                                <Grid Width="24" Height="24">
                                    <Ellipse Width="{Binding .}" 
                                             Height="{Binding .}"
                                             Fill="#94A3B8"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </Popup>
    </Grid>
</UserControl>
