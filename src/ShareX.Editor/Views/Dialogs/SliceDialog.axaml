<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             x:Class="ShareX.Editor.Views.Dialogs.SliceDialog"
             x:Name="SliceDialogRoot">

    <StackPanel Spacing="0">
        <TextBlock Text="Slice" Foreground="#9CA3AF" Margin="0,0,0,8"/>
        
        <StackPanel Spacing="12">
            <!-- Min Height -->
            <StackPanel Spacing="0">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0" Text="Min Height" Foreground="#9CA3AF"/>
                    <Border Grid.Column="1" Classes="capsule">
                        <TextBlock Text="{Binding ElementName=MinHeightSlider, Path=Value, StringFormat='{}{0:0}'}"
                                   Foreground="#E7E9EA"/>
                    </Border>
                </Grid>
                <Slider x:Name="MinHeightSlider" Minimum="1" Maximum="100" Value="5" ValueChanged="OnValueChanged"
                        Background="#374151"/>
            </StackPanel>

            <!-- Max Height -->
            <StackPanel Spacing="0">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0" Text="Max Height" Foreground="#9CA3AF"/>
                    <Border Grid.Column="1" Classes="capsule">
                        <TextBlock Text="{Binding ElementName=MaxHeightSlider, Path=Value, StringFormat='{}{0:0}'}"
                                   Foreground="#E7E9EA"/>
                    </Border>
                </Grid>
                <Slider x:Name="MaxHeightSlider" Minimum="1" Maximum="200" Value="20" ValueChanged="OnValueChanged"
                        Background="#374151"/>
            </StackPanel>

            <!-- Min Shift -->
            <StackPanel Spacing="0">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0" Text="Min Shift" Foreground="#9CA3AF"/>
                    <Border Grid.Column="1" Classes="capsule">
                        <TextBlock Text="{Binding ElementName=MinShiftSlider, Path=Value, StringFormat='{}{0:0}'}"
                                   Foreground="#E7E9EA"/>
                    </Border>
                </Grid>
                <Slider x:Name="MinShiftSlider" Minimum="-100" Maximum="100" Value="-10" ValueChanged="OnValueChanged"
                        Background="#374151"/>
            </StackPanel>

            <!-- Max Shift -->
            <StackPanel Spacing="0">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0" Text="Max Shift" Foreground="#9CA3AF"/>
                    <Border Grid.Column="1" Classes="capsule">
                        <TextBlock Text="{Binding ElementName=MaxShiftSlider, Path=Value, StringFormat='{}{0:0}'}"
                                   Foreground="#E7E9EA"/>
                    </Border>
                </Grid>
                <Slider x:Name="MaxShiftSlider" Minimum="-100" Maximum="100" Value="10" ValueChanged="OnValueChanged"
                        Background="#374151"/>
            </StackPanel>
        </StackPanel>

        <!-- Buttons -->
        <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button Classes="editor-button" Content="Cancel" Click="OnCancelClick" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
            <Button Classes="editor-button active" Content="Apply" Click="OnApplyClick" Margin="4,0,0,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>
