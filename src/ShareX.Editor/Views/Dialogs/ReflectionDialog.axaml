<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
             x:Class="ShareX.Editor.Views.Dialogs.ReflectionDialog"
             x:Name="ReflectionDialogRoot">

    <StackPanel Spacing="0">
        <TextBlock Text="Reflection" Foreground="#9CA3AF" Margin="0,0,0,8"/>
        
        <StackPanel Spacing="12">
            <!-- Percentage -->
            <StackPanel Spacing="0">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0" Text="Percentage" Foreground="#9CA3AF"/>
                    <Border Grid.Column="1" Classes="capsule">
                        <TextBlock Text="{Binding ElementName=PercentageSlider, Path=Value, StringFormat='{}{0:0}%'}"
                                   Foreground="#E7E9EA"/>
                    </Border>
                </Grid>
                <Slider x:Name="PercentageSlider" Minimum="1" Maximum="100" Value="50" ValueChanged="OnValueChanged"
                        Background="#374151"/>
            </StackPanel>

            <!-- Max Alpha -->
            <StackPanel Spacing="0">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0" Text="Max Alpha" Foreground="#9CA3AF"/>
                    <Border Grid.Column="1" Classes="capsule">
                        <TextBlock Text="{Binding ElementName=MaxAlphaSlider, Path=Value, StringFormat='{}{0:0}'}"
                                   Foreground="#E7E9EA"/>
                    </Border>
                </Grid>
                <Slider x:Name="MaxAlphaSlider" Minimum="0" Maximum="255" Value="200" ValueChanged="OnValueChanged"
                        Background="#374151"/>
            </StackPanel>

            <!-- Min Alpha -->
            <StackPanel Spacing="0">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0" Text="Min Alpha" Foreground="#9CA3AF"/>
                    <Border Grid.Column="1" Classes="capsule">
                        <TextBlock Text="{Binding ElementName=MinAlphaSlider, Path=Value, StringFormat='{}{0:0}'}"
                                   Foreground="#E7E9EA"/>
                    </Border>
                </Grid>
                <Slider x:Name="MinAlphaSlider" Minimum="0" Maximum="255" Value="0" ValueChanged="OnValueChanged"
                        Background="#374151"/>
            </StackPanel>

            <!-- Offset -->
            <StackPanel Spacing="0">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0" Text="Offset" Foreground="#9CA3AF"/>
                    <Border Grid.Column="1" Classes="capsule">
                        <TextBlock Text="{Binding ElementName=OffsetSlider, Path=Value, StringFormat='{}{0:0}'}"
                                   Foreground="#E7E9EA"/>
                    </Border>
                </Grid>
                <Slider x:Name="OffsetSlider" Minimum="0" Maximum="100" Value="0" ValueChanged="OnValueChanged"
                        Background="#374151"/>
            </StackPanel>

            <!-- Skew -->
            <StackPanel Spacing="4">
                <CheckBox x:Name="SkewCheckBox" Content="Skew" Foreground="#E7E9EA" 
                          Checked="OnCheckChanged" Unchecked="OnCheckChanged"/>
                <StackPanel IsVisible="{Binding ElementName=SkewCheckBox, Path=IsChecked}">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Grid.Column="0" Text="Skew Size" Foreground="#9CA3AF"/>
                        <Border Grid.Column="1" Classes="capsule">
                            <TextBlock Text="{Binding ElementName=SkewSizeSlider, Path=Value, StringFormat='{}{0:0}'}"
                                       Foreground="#E7E9EA"/>
                        </Border>
                    </Grid>
                    <Slider x:Name="SkewSizeSlider" Minimum="1" Maximum="100" Value="25" ValueChanged="OnValueChanged"
                            Background="#374151"/>
                </StackPanel>
            </StackPanel>

        </StackPanel>

        <!-- Buttons -->
        <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button Classes="editor-button" Content="Cancel" Click="OnCancelClick" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
            <Button Classes="editor-button active" Content="Apply" Click="OnApplyClick" Margin="4,0,0,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>
