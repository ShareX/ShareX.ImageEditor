<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="350"
             x:Class="ShareX.Editor.Views.Dialogs.ResizeCanvasDialog"
             x:Name="ResizeCanvasDialogRoot">

    <StackPanel Spacing="0">
        <!-- Header -->
        <TextBlock Text="Resize Canvas" Foreground="#9CA3AF" Margin="0,0,0,8"/>
        
        <StackPanel Spacing="12">
            <TextBlock Text="Add padding (px)" Foreground="#9CA3AF" FontSize="12"/>

            <!-- Padding Inputs -->
            <!-- Using simple stack for sidebar -->
            <StackPanel Spacing="8">
                <Grid ColumnDefinitions="*,8,*">
                    <StackPanel Grid.Column="0" Spacing="4">
                        <TextBlock Text="Top" Foreground="#9CA3AF" HorizontalAlignment="Center"/>
                        <NumericUpDown x:Name="TopInput" Value="{Binding TopPadding, ElementName=ResizeCanvasDialogRoot}" Minimum="0" Maximum="1000" Increment="10" FormatString="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                    </StackPanel>
                     <StackPanel Grid.Column="2" Spacing="4">
                        <TextBlock Text="Bottom" Foreground="#9CA3AF" HorizontalAlignment="Center"/>
                        <NumericUpDown x:Name="BottomInput" Value="{Binding BottomPadding, ElementName=ResizeCanvasDialogRoot}" Minimum="0" Maximum="1000" Increment="10" FormatString="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                    </StackPanel>
                </Grid>
                
                <Grid ColumnDefinitions="*,8,*">
                    <StackPanel Grid.Column="0" Spacing="4">
                        <TextBlock Text="Left" Foreground="#9CA3AF" HorizontalAlignment="Center"/>
                        <NumericUpDown x:Name="LeftInput" Value="{Binding LeftPadding, ElementName=ResizeCanvasDialogRoot}" Minimum="0" Maximum="1000" Increment="10" FormatString="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Spacing="4">
                        <TextBlock Text="Right" Foreground="#9CA3AF" HorizontalAlignment="Center"/>
                        <NumericUpDown x:Name="RightInput" Value="{Binding RightPadding, ElementName=ResizeCanvasDialogRoot}" Minimum="0" Maximum="1000" Increment="10" FormatString="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Canvas Color -->
            <StackPanel Spacing="4">
                <TextBlock Text="Canvas Color" Foreground="#9CA3AF"/>
                <Grid ColumnDefinitions="Auto,*">
                    <Border Grid.Column="0" 
                            Width="40" Height="32" 
                            CornerRadius="4"
                            Background="{Binding CanvasColorBrush, ElementName=ResizeCanvasDialogRoot}"
                            BorderBrush="#1F1F1F" BorderThickness="1"/>
                    <ComboBox Grid.Column="1" 
                              x:Name="ColorPresetCombo"
                              Margin="8,0,0,0"
                              SelectedIndex="0"
                              SelectionChanged="OnColorPresetChanged"
                              HorizontalAlignment="Stretch" Background="#374151" BorderThickness="0" CornerRadius="4">
                        <ComboBoxItem Content="Transparent"/>
                        <ComboBoxItem Content="White"/>
                        <ComboBoxItem Content="Black"/>
                        <ComboBoxItem Content="Match image edge"/>
                    </ComboBox>
                </Grid>
            </StackPanel>
        </StackPanel>

        <!-- Buttons -->
        <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button Classes="editor-button" Content="Cancel" Click="OnCancelClick" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
            <Button Classes="editor-button active" Content="Apply" Click="OnApplyClick" Margin="4,0,0,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>
