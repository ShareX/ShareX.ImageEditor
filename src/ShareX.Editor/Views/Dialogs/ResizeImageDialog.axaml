<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             x:Class="ShareX.Editor.Views.Dialogs.ResizeImageDialog"
             x:Name="ResizeImageDialogRoot">

    <StackPanel Spacing="0">
        <!-- Header -->
        <TextBlock Text="Resize Image" Foreground="#9CA3AF" Margin="0,0,0,8"/>

        <StackPanel Spacing="12">
            <!-- Width Input -->
            <StackPanel Spacing="4">
                <TextBlock Text="Width (px)" Foreground="#9CA3AF"/>
                <NumericUpDown x:Name="WidthInput" 
                               Value="{Binding ResizeWidth, ElementName=ResizeImageDialogRoot}"
                               ValueChanged="OnWidthChanged"
                               Minimum="1" Maximum="10000" Increment="1" FormatString="0"
                               HorizontalAlignment="Stretch"/>
            </StackPanel>

            <!-- Height Input -->
            <StackPanel Spacing="4">
                <TextBlock Text="Height (px)" Foreground="#9CA3AF"/>
                <NumericUpDown x:Name="HeightInput" 
                               Value="{Binding ResizeHeight, ElementName=ResizeImageDialogRoot}"
                               ValueChanged="OnHeightChanged"
                               Minimum="1" Maximum="10000" Increment="1" FormatString="0"
                               HorizontalAlignment="Stretch"/>
            </StackPanel>

            <!-- Maintain Aspect Ratio -->
            <CheckBox x:Name="MaintainAspectRatioCheckbox"
                      IsChecked="{Binding MaintainAspectRatio, ElementName=ResizeImageDialogRoot}"
                      Foreground="#E7E9EA"
                      Content="Maintain aspect ratio"/>

            <!-- Resample Mode -->
            <StackPanel Spacing="4">
                <TextBlock Text="Resample Mode" Foreground="#9CA3AF"/>
                <ComboBox x:Name="ResampleModeCombo" 
                          SelectedIndex="2"
                          HorizontalAlignment="Stretch"
                          Background="#374151" BorderThickness="0" CornerRadius="4">
                    <ComboBoxItem Content="Nearest Neighbor (Fast)"/>
                    <ComboBoxItem Content="Bilinear"/>
                    <ComboBoxItem Content="Bicubic"/>
                    <ComboBoxItem Content="High Quality (Lanczos)"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <!-- Buttons -->
        <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button Classes="editor-button" Content="Cancel" Click="OnCancelClick" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
            <Button Classes="editor-button active" Content="Apply" Click="OnApplyClick" Margin="4,0,0,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>
