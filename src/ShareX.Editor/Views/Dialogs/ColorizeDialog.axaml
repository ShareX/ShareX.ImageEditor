<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="350"
             x:Class="ShareX.Editor.Views.Dialogs.ColorizeDialog"
             x:Name="ColorizeDialogRoot">

    <UserControl.Resources>
    </UserControl.Resources>

    <StackPanel Spacing="0">
        <!-- Header -->
        <TextBlock Text="Colorize" Foreground="#9CA3AF" Margin="0,0,0,8"/>
        
        <StackPanel Spacing="12">
            <!-- Hue Slider -->
            <StackPanel Spacing="0">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0" Text="Hue" Foreground="#9CA3AF"/>
                    <Border Grid.Column="1" Classes="capsule">
                        <TextBlock Text="{Binding ElementName=HueSlider, Path=Value, StringFormat='{}{0:0}Â°'}"
                                   Foreground="#E7E9EA"/>
                    </Border>
                </Grid>
                <Slider x:Name="HueSlider"
                        Minimum="0" Maximum="360" Value="180"
                        TickFrequency="30" IsSnapToTickEnabled="False"
                         Background="#374151"
                        ValueChanged="OnValueChanged"/>
            </StackPanel>

            <!-- Saturation Slider -->
            <StackPanel Spacing="0">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0" Text="Saturation" Foreground="#9CA3AF"/>
                    <Border Grid.Column="1" Classes="capsule">
                        <TextBlock Text="{Binding ElementName=SaturationSlider, Path=Value, StringFormat='{}{0:0}%'}"
                                   Foreground="#E7E9EA"/>
                    </Border>
                </Grid>
                <Slider x:Name="SaturationSlider"
                        Minimum="0" Maximum="100" Value="50"
                        TickFrequency="10" IsSnapToTickEnabled="False"
                         Background="#374151"
                        ValueChanged="OnValueChanged"/>
            </StackPanel>

            <!-- Strength Slider -->
            <StackPanel Spacing="0">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0" Text="Strength" Foreground="#9CA3AF"/>
                    <Border Grid.Column="1" Classes="capsule">
                        <TextBlock Text="{Binding ElementName=StrengthSlider, Path=Value, StringFormat='{}{0:0}%'}"
                                   Foreground="#E7E9EA"/>
                    </Border>
                </Grid>
                <Slider x:Name="StrengthSlider"
                        Minimum="0" Maximum="100" Value="100"
                        TickFrequency="10" IsSnapToTickEnabled="False"
                         Background="#374151"
                        ValueChanged="OnValueChanged"/>
            </StackPanel>

            <!-- Color Preview -->
            <StackPanel Spacing="4">
                <TextBlock Text="Preview" Foreground="#9CA3AF" FontSize="12"/>
                <Border x:Name="PreviewColorBox" Height="30" CornerRadius="4" BorderBrush="#374151" BorderThickness="1">
                    <Border.Background>
                        <SolidColorBrush Color="Transparent"/>
                    </Border.Background>
                </Border>
            </StackPanel>
        </StackPanel>

        <!-- Buttons -->
        <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button Classes="editor-button" Content="Cancel" Click="OnCancelClick" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
            <Button Classes="editor-button active" Content="Apply" Click="OnApplyClick" Margin="4,0,0,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>
