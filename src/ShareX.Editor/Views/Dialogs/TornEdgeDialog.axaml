<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="350"
             x:Class="ShareX.Editor.Views.Dialogs.TornEdgeDialog"
             x:Name="TornEdgeDialogRoot">

    <StackPanel Spacing="0">
        <TextBlock Text="Torn Edge" Foreground="#9CA3AF" Margin="0,0,0,8"/>
        
        <StackPanel Spacing="12">
            <!-- Depth -->
            <StackPanel Spacing="0">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0" Text="Depth" Foreground="#9CA3AF"/>
                    <Border Grid.Column="1" Classes="capsule">
                        <TextBlock Text="{Binding ElementName=DepthSlider, Path=Value, StringFormat='{}{0:0}'}"
                                   Foreground="#E7E9EA"/>
                    </Border>
                </Grid>
                <Slider x:Name="DepthSlider" Minimum="1" Maximum="100" Value="20" ValueChanged="OnValueChanged"
                        Background="#374151"/>
            </StackPanel>

            <!-- Range -->
            <StackPanel Spacing="0">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0" Text="Range" Foreground="#9CA3AF"/>
                    <Border Grid.Column="1" Classes="capsule">
                        <TextBlock Text="{Binding ElementName=RangeSlider, Path=Value, StringFormat='{}{0:0}'}"
                                   Foreground="#E7E9EA"/>
                    </Border>
                </Grid>
                <Slider x:Name="RangeSlider" Minimum="1" Maximum="100" Value="20" ValueChanged="OnValueChanged"
                        Background="#374151"/>
            </StackPanel>

            <!-- Sides -->
            <StackPanel Spacing="8">
                <TextBlock Text="Sides" Foreground="#9CA3AF"/>
                <StackPanel Orientation="Vertical">
                    <CheckBox x:Name="TopCheckBox" Content="Top" IsChecked="True" Foreground="#E7E9EA"
                              Checked="OnCheckChanged" Unchecked="OnCheckChanged"/>
                    <CheckBox x:Name="RightCheckBox" Content="Right" IsChecked="True" Foreground="#E7E9EA"
                              Checked="OnCheckChanged" Unchecked="OnCheckChanged"/>
                    <CheckBox x:Name="BottomCheckBox" Content="Bottom" IsChecked="True" Foreground="#E7E9EA"
                              Checked="OnCheckChanged" Unchecked="OnCheckChanged"/>
                    <CheckBox x:Name="LeftCheckBox" Content="Left" IsChecked="True" Foreground="#E7E9EA"
                              Checked="OnCheckChanged" Unchecked="OnCheckChanged"/>
                </StackPanel>
            </StackPanel>

            <!-- Curved edges -->
            <CheckBox x:Name="CurvedCheckBox" Content="Curved edges" Foreground="#E7E9EA"
                      Checked="OnCheckChanged" Unchecked="OnCheckChanged"/>

        </StackPanel>

        <!-- Buttons -->
        <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
            <Button Classes="editor-button" Content="Cancel" Click="OnCancelClick" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
            <Button Classes="editor-button active" Content="Apply" Click="OnApplyClick" Margin="4,0,0,0" Grid.Column="1" HorizontalAlignment="Stretch"/>
        </Grid>
    </StackPanel>
</UserControl>
